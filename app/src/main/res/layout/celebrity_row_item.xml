<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:elevation="2px"
    android:background="@color/white">


    <ImageView
        android:layout_margin="16dp"
        android:id="@+id/ivphotoCelbrity"
        android:layout_width="@dimen/sizePhot"
        android:layout_height="@dimen/sizePhot">

    </ImageView>

    <TextView
        android:id="@+id/tvNameCelebrity"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@+id/ivphotoCelbrity"
        android:text="Malik Faisal"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/tvPhoneCelebrity"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/tvNameCelebrity"
        android:layout_toRightOf="@+id/ivphotoCelbrity"
        android:text="0893111323232"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>